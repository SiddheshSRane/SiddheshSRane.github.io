<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 30 days"
  
  # Images (long cache)
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS and JS (long cache with versioning)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Fonts (very long cache)
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  
  # HTML and JSON (short cache, recheck frequently)
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType application/json "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
  # Disable caching for HTML files
  <FilesMatch "\.(html|json)$">
    Header set Cache-Control "public, max-age=0, must-revalidate"
  </FilesMatch>
  
  # Long-term caching for assets (use versioning in filenames)
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Set GZIP compression
  <IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
  </IfModule>
  
  # Security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# GZIP compression (alternative if mod_deflate isn't available)
<IfModule mod_gzip.c>
  mod_gzip_on Yes
  mod_gzip_dechunk Yes
  mod_gzip_item_include file \.(html?|txt|css|js|json|xml)$
  mod_gzip_item_include handler ^cgi-script$
  mod_gzip_item_exclude mime ^image/
  mod_gzip_item_exclude rspheader ^Content-Encoding:\s*gzip.
  mod_gzip_minimum_file_size 512
  mod_gzip_maximum_file_size 1000000
</IfModule>
